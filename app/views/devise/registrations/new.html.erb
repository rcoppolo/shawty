<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html =>{:class => 'well register'}) do |f| %>
  <h2>Sign up</h2>

	<%= devise_error_messages! %>

  <div><%= f.email_field :email, :placeholder => 'email' %></div>

  <div><%= f.password_field :password, :placeholder => 'password' %></div>

  <div><%= f.password_field :password_confirmation, :placeholder => 'password confirmation' %></div>

  <div><%= f.submit "Sign up", :class => 'button submit' %></div>
<% end %>

